# Synapse Environment Configuration
# 
# COPY THIS FILE TO .env AND CUSTOMIZE FOR YOUR LOCAL SETUP
# 
# This file serves as a template. The actual .env file is NOT committed to git
# for security reasons. Each developer should have their own .env file.

# RAG Configuration
AUTO_RAG=false
RAG_TOP_K=4
RAG_MAX_CHARS=1800
RAG_ALPHA=0.6
RAG_VEC_K=64
RAG_BM25_K=64
RAG_MMR_LAMBDA=0.6
RAG_MMR_POOL=24
RAG_USE_TITLES=1
RAG_TITLE_BOOST=0.25
RAG_TITLE_K=64

# LLM Configuration
LLAMA_URL=http://127.0.0.1:8080/v1/chat/completions
LLAMA_MODEL=qwen2.5-3b-instruct-q4_k_m

# Backend Configuration
PORT=9000
HOST=127.0.0.1
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501
AUTH_TOKEN=

# Frontend Configuration
BACKEND_URL=http://127.0.0.1:9000

# Embedding Model
EMB_MODEL=BAAI/bge-base-en-v1.5

# Context Size
CTX_SIZE=32768

# Guardian Configuration
GUARDIAN_ENABLED=true
GUARD_PORT=8081

# Note: Guardian provides content filtering and policy enforcement
# Set to false to disable content filtering
